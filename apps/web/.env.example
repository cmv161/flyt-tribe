DATABASE_URL=postgresql://postgres:postgres@localhost:5433/flyt_tribe
# Set true only when x-forwarded-for / x-real-ip are injected by a trusted reverse proxy
TRUST_PROXY_HEADERS=false
NEXT_PUBLIC_BASE_PATH=
# If NEXT_PUBLIC_BASE_PATH=/app then AUTH_URL must be http://localhost:3000/app/api/auth

# Generate with: openssl rand -base64 32
AUTH_SECRET=
# Required in production
AUTH_URL=http://localhost:3000/api/auth
AUTH_DEFAULT_PROVIDER=github
# Optional. 0 = always re-fetch claims from DB in JWT callback
# Max allowed is 30000 in production.
AUTH_CLAIMS_REFRESH_INTERVAL_MS=5000
# Optional. Session/JWT lifetime tuning (seconds)
AUTH_SESSION_MAX_AGE_SECONDS=604800
AUTH_SESSION_UPDATE_AGE_SECONDS=86400
# First admin bootstrap is CLI-only:
# Use one source: --database-url OR --env-file
# --confirm must include database name or full fingerprint
# pnpm auth:bootstrap-admin -- --user-id <uuid> --database-url postgresql://user:pass@host:5432/db --confirm db --scopes auth:read
# pnpm auth:bootstrap-admin -- --user-id <uuid> --env-file apps/web/.env.local --confirm host:5433/flyt_tribe/postgres/public --scope auth:read

# OAuth provider (GitHub)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# OAuth provider (Google)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
